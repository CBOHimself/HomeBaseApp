<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BAC1B8"
    android:layout_height="match_parent"
    tools:context=".NewAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/passwordrentry"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Re-enter Passsword"
                    android:inputType="textPassword"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/accomId"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Accommodation ID"
                    android:inputType="textShortMessage"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textLongMessage"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/postcode"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Post Code"
                    android:inputType="textPostalAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/country"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Country"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />


                <CheckBox
                    android:id="@+id/agreement"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="I agree to the terms and conditions and the privacy policy" />

                <Button
                    android:id="@+id/completesignup"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up" />

                <Button
                    android:id="@+id/backsignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />

                <ProgressBar
                    android:id="@+id/signupprog"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>